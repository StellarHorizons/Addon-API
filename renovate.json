{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packageNames": ["com.mojang:minecraft"],
      "enabled": false
    },
    {
      "packageNames": ["fabric-loom:fabric-loom.gradle.plugin"],
      "allowedVersions": "~0.2"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^cloudbuild.yaml$"],
      "matchStrings": [
        "name: (?<depName>.*):(?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "commitMessagePrefix": "⬆️"
}
